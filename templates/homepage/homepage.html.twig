{% extends 'base.html.twig' %}

{% block title %}Главная{% endblock %}

{% block body %}
    <h1 class="h1main">Главная</h1>
    <div class="line"></div>
    {% if 'ROLE_ADMIN' in app.user.roles  %}
        <h2 class="h1main text-black">У вас есть права Админа</h2>
    {% endif %}

    <h1 class="h2 text-center mb-5">Топ Новых Цитат</h1>
    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active" data-bs-interval="2000">
                <img src="{{ asset('assets/img/quotesbc.jpeg') }}" class="d-block" alt="...">
                <div class="carousel-caption d-none d-md-block colo">
                    <h1>{{ quotes[quotes|length -1].title }}</h1>
                    <p>©{{ quotes[quotes|length -1].author }}</p>
                </div>
            </div>
            <div class="carousel-item" data-bs-interval="4000">
                <img src="{{ asset('assets/img/quotesbc.jpeg') }}" class="d-block" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h1>{{ quotes[quotes|length -2].title }}</h1>
                    <p>©{{ quotes[quotes|length -2].author }}</p>
                </div>
            </div>
            <div class="carousel-item" data-bs-interval="10000">
                <img src="{{ asset('assets/img/quotesbc.jpeg') }}" class="d-block" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h1>{{ quotes[quotes|length -3].title }}</h1>
                    <p>©{{ quotes[quotes|length -3].author }}</p>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="btncr">Назад</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
            <span class="btncr">След</span>
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
        </button>
    </div>
    <div class="row mt-5 justify-content-center">

        <div class="line"></div>
        <h1 class="h2 text-center mb-5">Управление</h1>

        <a class="card createRecipe mr-5" href="/note/create" style="width: 18rem;">
            <div class="card-body">
                  <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                    {{ notes|length }}
                  </span>
                <h3 class="card-title mb-4 bluetext btn-primary fs-4">
                    Добавить Заметку</h3>
                <p class="plusRecipe">+</p>
            </div>
        </a>
        <a class="card createRecipe cardmain" href="/recipe/create" style="width: 18rem;">
            <div class="card-body">
                  <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                    {{ recipes|length }}
                  </span>
                <h3 class="card-title mb-4 bluetext btn-primary fs-4">Добавить Рецепт</h3>
                <p class="plusRecipe">+</p>
            </div>
        </a>
    </div>

    <div class="line mt-5"></div>
    <h1 class="h2 text-center mb-5">Календарь</h1>


    <div id="calendar-holder" class="mt-5"></div>

{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
    {{ encore_entry_link_tags('calendar') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    {{ encore_entry_script_tags('calendar') }}
{% endblock %}

