{% extends 'base.html.twig' %}

{% block title %}Заметки{% endblock %}

{% block body %}

<div class="example-wrapper">
    <h1 class="h1main">Заметка</h1>
    <div class="line"></div>

    {% for message in app.flashes('success_update') %}
        <div class="alert alert-success mb-5">
            {{ message }}
        </div>
    {% endfor %}

    <div class="symfonyForm">
        {{ form_start(noteForm) }}

        {{ form_errors(noteForm) }}

        <div class="formErrors">
            {{ form_errors(noteForm.title) }}
            {{ form_errors(noteForm.description) }}
        </div>
        <div class="createdAt">Дата создания: <b>{{ createdAt|date("m/d/Y") }}</b><div class="line"></div></div>
        {{ form_label(noteForm.title, 'Название Заметки', {'label_attr': {'class': 'formLabel'}}) }}
        {{ form_widget(noteForm.title, {'attr': {'class': 'form-control formInput'}}) }}
        {{ form_label(noteForm.description, 'Описание Заметки', {'label_attr': {'class': 'formLabel'}}) }}
        {{ form_widget(noteForm.description, {'attr': {'class': 'form-control formInput inputTextarea'}}) }}

        <div class="row btnsforlogin">
            <button type="submit" class="btn formbutton mt-5">
                Обновить
            </button>
        </div>

        {{ form_end(noteForm) }}
    </div>

</div>
{% endblock %}
