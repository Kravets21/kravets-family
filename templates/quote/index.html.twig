{% extends 'base.html.twig' %}

{% block title %}Фонд Цитат{% endblock %}

{% block body %}

    <div class="example-wrapper">
        <h1 class="h1main">Фонд Цитат</h1>
        <div class="line"></div>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success mb-5">
                {{ message }}
            </div>
        {% endfor %}

        <div class="itemsList">
            <a class="card createRecipe" href="/recipe/create" style="width: 18rem;">
                <div class="card-body">
                  <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                    {{ quotes|length }}
                  </span>
                    <h3 class="card-title mb-4 bluetext btn-primary">Добавить Цитату</h3>
                    <p class="plusRecipe">+</p>
                </div>
            </a>
            {% for recipe in quotes %}
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title mb-4 bluetext">{{ recipe.title }}</h5>
                        <p class="card-text">{{ recipe.author }}</p>
                        <a href="/qoute/{{ recipe.id }}" class="card-link">Открыть</a>
                        <a class="card-link remove" href="/qoute/{{ recipe.id }}/delete">Удалить</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
